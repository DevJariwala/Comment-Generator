{
    "manifest_version": 3,
    "name": "LinkedIn Comment Generator",
    "version": "1.0",
    "description": "Add a button to generate comments based on post content.",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://www.linkedin.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  